<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <%= image_tag post.post_image_url, class: "card-img-top", width: "300", height:"200" %>
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= post.title %>
          </h4>
          <div class='ms-auto'>
            <%= link_to edit_post_path(post), id: 'button-edit-#{post.id}' do %>
              <i class="bi bi-vector-pen" style="font-size: 1.3rem; color: cornflowerblue;"></i>
            <% end %>
          </div>
        </div>
        <p class="card-text"><%= post.body %></p>
        <ul class="list-inline">
          <li><i class="bi bi-alarm"></i><%= post.deadline.strftime(" %m月%d日") %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
